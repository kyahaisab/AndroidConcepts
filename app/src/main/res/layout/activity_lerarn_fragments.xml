<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fragment_one"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add Fragment 1"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/fragment_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_two"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add Fragment 2"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/fragment_three"
        app:layout_constraintStart_toEndOf="@id/fragment_one"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_three"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Rep Fragment 3"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_two"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_two" />

</androidx.constraintlayout.widget.ConstraintLayout>